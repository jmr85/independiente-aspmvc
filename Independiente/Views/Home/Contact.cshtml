<div id="clase-row" class="row">
    <div class="col-md-6">

        <form role="form" id="form-contacto">
            <div class="form-group">
                <input type="text" class="form-control" name="nombre" id="nombre_1" placeholder="Nombre (requerido)" autofocus required>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="mail"  id="email_1" placeholder="fulano@mail.com (requerido)" required>
            </div>
            <div class="form-group">
                <input type="tel" class="form-control" name="tel" id="tel_1" placeholder="(11)0800-5555">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="asunto_1" placeholder="Asunto">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="mensaje_1" rows="3" placeholder="Mensaje (requerido)" required></textarea>
            </div>
            <button type="submit" class="btn btn-default">Enviar</button>
        </form>
        <p class="bg-success" style="margin-top: 15px"></p>

        <script src="js/validacion-form.js"></script>
    </div>
